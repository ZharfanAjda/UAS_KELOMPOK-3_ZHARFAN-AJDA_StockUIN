<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Hiasan bulat 1 - pojok kiri atas -->
    <ImageView
        android:id="@+id/bulat1"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/bulat1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"/>

    <!-- Hiasan bulat 2 - pojok kanan atas -->
    <ImageView
        android:id="@+id/bulat2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/bulat1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="40dp" />

    <!-- Hiasan bulat 3 - pojok kanan bawah -->
    <ImageView
        android:id="@+id/bulat3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/bulat1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="30dp"/>

    <ImageView
        android:id="@+id/bulat4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/bulat1"
        android:layout_alignParentBottom="true"
        android:layout_margin="42dp" />

    <!-- Logo utama -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp" />

    <!-- Nama Aplikasi -->
    <TextView
        android:id="@+id/textAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StockUIN"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#00AA00"
        android:layout_below="@id/logoImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="invisible" />
</RelativeLayout>
